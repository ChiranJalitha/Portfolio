---
import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="U.K. Chiran Jalitha – Game Designer, UI/UX Designer & 3D Modeler specializing in interactive media" />
    <title>U.K. Chiran Jalitha – Interactive Media Portfolio</title>
    <!-- Optional: add favicon later when you have one -->
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
  </head>

  <body class="min-h-screen flex flex-col bg-gradient-to-br from-purple-950 via-indigo-950 to-violet-950 text-white antialiased">
    <!-- Main content wrapper with better spacing on larger screens -->
    <main class="flex-grow flex flex-col items-center justify-center w-full max-w-5xl mx-auto px-6 py-16 md:py-24">

      <!-- Hero / Introduction -->
      <header class="text-center mb-16 md:mb-20">
        <!-- Profile photo -->
        <div class="relative inline-block mb-8">
          <img 
            src="/ProfilePic.jpeg" 
            alt="U.K. Chiran Jalitha" 
            class="w-40 h-40 md:w-48 md:h-48 rounded-full mx-auto object-cover border-4 border-purple-500/40 shadow-2xl shadow-purple-900/70 transition-transform duration-500 hover:scale-105"
          />
          <!-- Optional subtle glow ring -->
          <div class="absolute inset-0 rounded-full bg-gradient-to-r from-purple-500/20 to-indigo-500/20 blur-xl -z-10"></div>
        </div> 

        <!-- Name with improved hover + scale effect -->
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-purple-300 hover:text-purple-400 transition-all duration-500 tracking-tight drop-shadow-lg hover:drop-shadow-xl">
          U.K. Chiran Jalitha
        </h1>

        <!-- Tagline -->
        <p class="mt-3 text-xl md:text-2xl text-indigo-200 font-light tracking-wide">
          Game Designer | UI/UX Designer | 3D Modeler
        </p>

        <!-- Degree / Specialization -->
        <p class="mt-2 text-lg text-purple-200/80">
          BSc Information Technology • Specialized in Interactive Media
        </p>

        <!-- Short motto / personality hook -->
        <p class="mt-6 text-base md:text-lg text-gray-300 max-w-2xl mx-auto leading-relaxed opacity-90">
          Passionate about turning imagination into interactive experiences through creativity, code, and 3D worlds.
        </p>
      </header>

      <!-- Quick call-to-action / navigation teaser (we'll expand later) -->
      <div class="flex flex-wrap justify-center gap-5 mt-8">
        <a 
          href="/projects" 
          class="px-8 py-4 bg-purple-600/80 hover:bg-purple-600 text-white font-medium rounded-lg transition-all duration-300 shadow-lg hover:shadow-purple-500/40 hover:-translate-y-1"
        >
          Explore Projects
        </a>
        <a 
          href="/about" 
          class="px-8 py-4 bg-indigo-600/60 hover:bg-indigo-600/80 text-white font-medium rounded-lg transition-all duration-300 shadow-lg hover:shadow-indigo-500/40 hover:-translate-y-1"
        >
          About Me
        </a>
      </div>

    </main>

    <!-- Footer placeholder – add social links later -->
    <footer class="py-8 text-center text-gray-400 text-sm">
      <p>© {new Date().getFullYear()} U.K. Chiran Jalitha • Built with Astro & Tailwind</p>
    </footer>
  </body>
</html>